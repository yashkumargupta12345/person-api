<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Person Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="p-4">
    <div class="container">

        <%- include('partials/header') %>

            <h2 class="mb-4">People List</h2>
            <a href="/new" class="btn btn-primary mb-3">Add New Person</a>

            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Mobile</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% persons.forEach(p=> { %>
                        <tr>
                            <td>
                                <%= p.name %>
                            </td>
                            <td>
                                <%= p.age %>
                            </td>
                            <td>
                                <%= p.gender %>
                            </td>
                            <td>
                                <%= p.mobile %>
                            </td>
                            <td>
                                <a href="/<%= p._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/<%= p._id %>/delete" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <%- include('partials/footer') %>

                </table>
    </div>
</body>

</html>